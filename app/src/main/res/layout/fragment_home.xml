<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="homeFragment"
            type="com.advanced.smartgardenapp.ui.home.HomeFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="34sp"
            android:layout_marginBottom="24dp"
            android:background="@color/secondary_background"
            tools:context=".ui.home.HomeFragment">

            <TextView
                android:id="@+id/text_title"
                android:text="Hello Anh Duc ðŸŒ¿"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"
                android:textSize="32sp"
                android:layout_marginStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_view_garden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_title"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_humidity"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginStart="28dp"
                android:elevation="8dp"
                android:outlineProvider="bounds"
                android:background="@drawable/background_feature"
                app:layout_constraintTop_toBottomOf="@id/recycle_view_garden"
                app:layout_constraintStart_toStartOf="parent">

                <View
                    android:id="@+id/view_humidity"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_humidity"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_title_humidity"
                    android:text="@string/humidity"
                    android:textColor="@color/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_humidity"/>

                <TextView
                    android:id="@+id/text_actual_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginBottom="12sp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_title_humidity"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_water_level"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="28dp"
                android:elevation="8dp"
                android:outlineProvider="bounds"
                android:background="@drawable/background_feature"
                app:layout_constraintTop_toBottomOf="@id/recycle_view_garden"
                app:layout_constraintEnd_toEndOf="parent">

                <View
                    android:id="@+id/view_water_level"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_water_level"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_title_water_level"
                    android:text="@string/water_level"
                    android:textColor="@color/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_water_level"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginBottom="12sp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="85%"
                    android:textColor="@color/secondary_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_title_water_level"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_temperature"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:elevation="8dp"
                android:outlineProvider="bounds"
                android:background="@drawable/background_feature"
                app:layout_constraintTop_toBottomOf="@id/recycle_view_garden"
                app:layout_constraintStart_toEndOf="@id/constraint_humidity"
                app:layout_constraintEnd_toStartOf="@id/constraint_water_level">

                <View
                    android:id="@+id/view_temperature"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_temperature"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_title_temperature"
                    android:text="@string/temperature"
                    android:textColor="@color/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_temperature"/>

                <TextView
                    android:id="@+id/text_actual_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginBottom="12sp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_title_temperature"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_light"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="8dp"
                android:outlineProvider="bounds"
                android:layout_marginStart="28dp"
                android:background="@drawable/background_feature"
                app:layout_constraintTop_toBottomOf="@id/constraint_humidity"
                app:layout_constraintStart_toStartOf="parent">

                <View
                    android:id="@+id/view_light"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <Switch
                    android:id="@+id/switch_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchTheme"
                    android:layout_marginEnd="8sp"
                    app:layout_constraintTop_toTopOf="@id/view_light"
                    app:layout_constraintBottom_toBottomOf="@id/view_light"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/text_title_light"
                    android:text="@string/light_status"
                    android:textColor="@color/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginBottom="12sp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="On"
                    android:textColor="@color/secondary_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_title_light"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_water_pump"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:elevation="8dp"
                android:outlineProvider="bounds"
                android:background="@drawable/background_feature"
                app:layout_constraintTop_toBottomOf="@id/constraint_humidity"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/view_water_pump"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="16dp"
                    app:tint="@color/primary_icon"
                    android:src="@drawable/ic_water_pump"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <Switch
                    android:id="@+id/switch_water_pump"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchTheme"
                    android:layout_marginEnd="8sp"
                    app:layout_constraintTop_toTopOf="@id/view_water_pump"
                    app:layout_constraintBottom_toBottomOf="@id/view_water_pump"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/text_title_water_pump"
                    android:text="Water Pump"
                    android:textColor="@color/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_water_pump"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginBottom="12sp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Off"
                    android:textColor="@color/secondary_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_title_water_pump"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_fan"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="8dp"
                android:outlineProvider="bounds"
                android:background="@drawable/background_feature"
                app:layout_constraintTop_toBottomOf="@id/constraint_humidity"
                app:layout_constraintStart_toEndOf="@id/constraint_light"
                app:layout_constraintEnd_toStartOf="@id/constraint_water_pump">

                <ImageView
                    android:id="@+id/view_fan"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="16dp"
                    app:tint="@color/primary_icon"
                    android:src="@drawable/ic_fan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <Switch
                    android:id="@+id/switch_fan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchTheme"
                    android:layout_marginEnd="8sp"
                    app:layout_constraintTop_toTopOf="@id/view_fan"
                    app:layout_constraintBottom_toBottomOf="@id/view_fan"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/text_title_fan"
                    android:text="@string/fan_status"
                    android:textColor="@color/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_fan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginBottom="12sp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="On"
                    android:textColor="@color/secondary_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_title_fan"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_set_humidity"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="8dp"
                android:outlineProvider="bounds"
                android:background="@drawable/background_set"
                app:layout_constraintTop_toBottomOf="@id/constraint_light"
                app:layout_constraintTop_toTopOf="@id/constraint_wifi"
                app:layout_constraintBottom_toBottomOf="@id/constraint_wifi"
                app:layout_constraintStart_toStartOf="@id/constraint_light"
                app:layout_constraintEnd_toEndOf="@id/constraint_fan">

                <View
                    android:id="@+id/view_set_humidity"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_humidity"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_title_set_humidity"
                    android:text="@string/set_humidity"
                    android:textColor="@color/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12sp"
                    app:layout_constraintStart_toEndOf="@id/view_set_humidity"
                    app:layout_constraintTop_toTopOf="parent"/>


                <ImageView
                    android:id="@+id/ic_minus_humidity"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/primary_icon"
                    android:src="@drawable/ic_minus"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="28sp"
                    android:textColor="@color/primary_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_set_humidity"
                    app:layout_constraintStart_toStartOf="@id/view_set_humidity"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintTop_toTopOf="@id/ic_minus_humidity"
                    app:layout_constraintBottom_toBottomOf="@id/ic_minus_humidity"
                    app:layout_constraintStart_toEndOf="@id/ic_minus_humidity"
                    app:layout_constraintEnd_toStartOf="@id/ic_plus_humidity"/>

                <ImageView
                    android:id="@+id/ic_plus_humidity"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/primary_icon"
                    android:src="@drawable/ic_plus"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginEnd="12sp"
                    app:layout_constraintTop_toTopOf="@id/ic_minus_humidity"
                    app:layout_constraintBottom_toBottomOf="@id/ic_minus_humidity"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_wifi"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:elevation="8dp"
                android:outlineProvider="bounds"
                android:background="@drawable/background_feature"
                app:layout_constraintTop_toBottomOf="@id/constraint_light"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/view_wifi"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_wifi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/primary_icon" />

                <TextView
                    android:id="@+id/text_title_wifi"
                    android:text="Connectivity"
                    android:textColor="@color/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_wifi"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginBottom="12sp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Online"
                    android:textColor="@color/secondary_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_title_wifi"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_set_temperature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20sp"
                android:elevation="8dp"
                android:outlineProvider="bounds"
                android:background="@drawable/background_set"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraint_set_humidity"
                app:layout_constraintStart_toStartOf="@id/constraint_light"
                app:layout_constraintEnd_toEndOf="@id/constraint_fan">

                <View
                    android:id="@+id/view_set_temperature"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_temperature"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_title_set_temperature"
                    android:text="@string/set_temperature"
                    android:textColor="@color/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12sp"
                    app:layout_constraintStart_toEndOf="@id/view_set_temperature"
                    app:layout_constraintTop_toTopOf="parent"/>


                <ImageView
                    android:id="@+id/ic_minus_temperature"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/primary_icon"
                    android:src="@drawable/ic_minus"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="28sp"
                    android:textColor="@color/primary_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_set_temperature"
                    app:layout_constraintStart_toStartOf="@id/view_set_temperature"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintTop_toTopOf="@id/ic_minus_temperature"
                    app:layout_constraintBottom_toBottomOf="@id/ic_minus_temperature"
                    app:layout_constraintStart_toEndOf="@id/ic_minus_temperature"
                    app:layout_constraintEnd_toStartOf="@id/ic_plus_temperature"/>

                <ImageView
                    android:id="@+id/ic_plus_temperature"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/primary_icon"
                    android:src="@drawable/ic_plus"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginEnd="12sp"
                    app:layout_constraintTop_toTopOf="@id/ic_minus_temperature"
                    app:layout_constraintBottom_toBottomOf="@id/ic_minus_temperature"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>